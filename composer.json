{
  "name": "tinypixel/copernicus",
  "type": "wordpress-plugin",
  "license": "MIT",
  "description": "A WordPress editor extension framework",
  "homepage": "https://tinypixel.dev",
  "keywords": [
    "wordpress",
    "plugin",
    "boilerplate"
  ],
  "autoload": {
    "psr-4": {
      "Copernicus\\": "app/",
      "Copernicus\\Boot\\": "boot/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Copernicus\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^7.1",
    "composer/installers": "^1.0",
    "roots/acorn": "dev-master",
    "roots/support": "dev-master",
    "illuminate/support": "^5.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.2",
    "squizlabs/php_codesniffer": "^3.3",
    "symfony/var-dumper": "^4.2"
  },
  "scripts": {
    "lint": "phpcs"
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}

{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "commonjs": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-trailing-spaces": 2,
    "no-undef": 2,
    "no-undefined": 2,
    "comma-dangle": [2, "always-multiline"],
    "quotes": [2, "single"],
    "semi": [2, "never"],
    "guard-for-in": 2,
    "no-eval": 2,
    "no-with": 2,
    "valid-typeof": 2,
    "no-unused-vars": 2,
    "no-continue": 1,
    "no-unreachable": 1,
    "max-len": [1, 80, 4],
    "react/prefer-es6-class": 0,
    "no-console": 0
  }
}
